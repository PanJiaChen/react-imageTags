* {
  box-sizing border-box
}

.tagged-wrapper_container {
  position relative
  width 100%
  height 100%
  img {
    width: 100%
    height 400px
    display block
  }
  .tagged-main {
    position relative;
    .tagged-wrapper {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
    }

  }
  .tagged-mask {
    position: absolute;
    top: 0;
    background-color: rgba(0, 0, 0, .6);
    width: 100%;
    height: 100%;
  }
  .info {
    .tagged-item {
      background: #fff !important;
      padding: 4px;
      border: 6px solid #000;
      border-radius: 50%;
      cursor: pointer;
    }
    .hasLink {
      text-decoration none;
      color #fff;
      .iconfont {
        color #3aefff;
        font-size 12px;
        padding-left 4px;
      }
    }

    .tagged-item-hover {
      color: #fff;
      text-indent: 6px;
      -webkit-clip-path: polygon(25% 0%, 100% 0, 100% 100%, 25% 100%, 0 50%);
      clip-path: polygon(25% 0%, 100% 0, 100% 100%, 25% 100%, 0 50%);
      background-color: rgba(0, 0, 0, 0.7);
      display: block;
      padding: 4px 10px;
      font-size: 12px;
      text-align: center;
      border-radius: 3px;
      max-width: 92px;
      word-break: break-all;
      min-height: 20px;
      min-width: 50px;
      margin-left 5px;
    }
    &.on_left {
      .tagged-item-hover {
        -webkit-clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 0 54%, 0% 0%);
        clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 0 54%, 0% 0%);
        text-indent 0px;
        padding-right 16px;
        margin-left -20px;
      }
    }

    &.could_edit {
      .tagged-item-hover {
        max-width 218px;
        max-width 210px;
      }
      .edit-input, .link-input {
        width: 200px;
        height: 30px;
        color #fff;
        font-size: 12px;
        text-indent: 8px;
        font-weight: normal;
        background-color rgba(0, 0, 0, 0.3);
        border: 1px solid #fff;
      }
      .link-input {
        display none;
        margin-bottom 10px;
      }
      .icon-container {
        float right;
        margin-top 10px;
        margin-bottom 10px;
        .iconfont_text {
          border: 1px solid #fff;
          width: 20px;
          height: 20px;
          display: inline-block;
          font-size: 12px;
          text-align: center;
          line-height: 20px;
          border-radius: 50%;
          cursor pointer
        }
      }
      .complete-tags {
        width: 86px
        height: 25px
        background-color #1282f0;
        text-align center;
        cursor pointer;
        border-radius 5px;
        line-height 25px;
        position absolute;
        right: 0px;
        bottom: -34px;
      }
      .delete-tag {
        position absolute;
        right: -10px;
        top: -8px;
        width: 16px;
        height: 16px;
        background #000;
        border-radius 50%;
        text-align center;
        line-height 15px;
        cursor pointer;
      }
      .icon-container, .complete-tags, .edit-input, .delete-tag, .link-input {
        display none;
      }
      .show-title {
        display block
      }
      &.on_left {
        .tagged-item-hover {
          margin-left -5px;
        }
      }
    }
    &.edit {
      .icon-container, .complete-tags, .edit-input, .delete-tag {
        display block;
      }
      .show-title {
        display none
      }
      .icon-container {
        &.link {
          &.show {
            .icon {
              background-color #1482f0;
            }
          }
        }
      }
      .show {
        display block
      }
      .tagged-item-hover {
        margin-left 15px;
        -webkit-clip-path: none;
        padding 5px 5px 0 5px;
        text-align left;
        text-indent 0;
      }
      &.on_left {
        .tagged-item-hover {
          margin-left -15px;
        }
      }
    }
  }
}



